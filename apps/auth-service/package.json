  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typeorm": "node -r ts-node/register -r tsconfig-paths/register -r dotenv/config ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:create ./src/database/migrations/$npm_config_name",
    "migration:run": "npm run typeorm migration:run -- -d ./src/database/typeorm.datasource.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./src/database/typeorm.datasource.ts"
  },
